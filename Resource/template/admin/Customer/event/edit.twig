{% extends '@admin/default_frame.twig' %}

{% set menus = ['customer_event', 'customer_event_edit'] %}

{% block title %}{{ 'admin.customer_event.customer_event_registration'|trans }}{% endblock %}
{% block sub_title %}{{ 'admin.customer_event.customer_event_management'|trans }}{% endblock %}

{% form_theme form '@admin/Form/bootstrap_4_horizontal_layout.html.twig' %}

{% block javascript %}
    <script>
    </script>
{% endblock javascript %}

{% block main %}
<form name="customer_event_form" role="form" id="customer_event_form" method="post" class="h-adr" novalidate>

{{ form_widget(form._token) }}
<div class="c-contentsArea__cols">
    <div class="c-contentsArea__primaryCol">
        <div class="c-primaryCol">
            <div class="card rounded border-0 mb-4">
                <div class="card-header">
                    <div class="row">
                        <div class="col-8"><span class="card-title">{{ 'admin.customer_event.customer_event_info'|trans }}</span>
                        </div>
                        <div class="col-4 text-end">
                            <a data-bs-toggle="collapse" href="#customerEventInfo"
                                aria-expanded="false" aria-controls="customerEventInfo">
                                <i class="fa fa-angle-up fa-lg"></i>
                            </a>
                        </div>
                    </div>
                </div><!-- card-header -->
                <div class="collapse show ec-cardCollapse" id="customerEventInfo">
                    <div class="card-body">
                        {# 1行1項目 #}
                        <div class="row mb-2">
                            <div class="col-3">
                                <span>{{ 'admin.customer_event.customer_code'|trans }}</span>
                                {# 必須マーク #}
                                <span class="badge bg-primary ms-1">{{ 'admin.common.required'|trans }}</span>
                            </div>
                            <div class="col">
                                {# 1画面に同じform_widgetを複数指定はできなそう #}
                                {{ form_widget(form.customer_code) }}
                                {{ form_errors(form.customer_code) }}
                            </div>
                        </div>
                        <div class="row mb-2">
                            <div class="col-3">
                                <span>{{ 'admin.customer_event.event_summary'|trans }}</span>
                            </div>
                            <div class="col">
                                {{ form_widget(form.event_summary) }}
                                {{ form_errors(form.event_summary) }}
                            </div>
                        </div>
                        <div class="row mb-2">
                            <div class="col-3">
                                <span>{{ 'admin.customer_event.event_start_date'|trans }}</span>
                            </div>
                            <div class="col">
                                {{ form_widget(form.event_start_date) }}
                                {{ form_errors(form.event_start_date) }}
                            </div>
                        </div>
                        <div class="row mb-2">
                            <div class="col-3">
                                <span>{{ 'admin.customer_event.event_end_date'|trans }}</span>
                            </div>
                            <div class="col">
                                {{ form_widget(form.event_end_date) }}
                                {{ form_errors(form.event_end_date) }}
                            </div>
                        </div>
            </div><!-- card rounded border-0 mb-4 -->
        </div><!-- c-primaryCol -->
    </div><!-- c-contentsArea__primaryCol -->
</div><!-- c-contentsArea__cols -->

<div class="c-conversionArea">
    <div class="c-conversionArea__container">
        <div class="row justify-content-between align-items-center">
            <div class="col-6">
                <div class="c-conversionArea__leftBlockItem">
                    <a class="c-baseLink" href="{{ url('admin_customer_event', { resume: 1 }) }}">
                        <i class="fa fa-backward" aria-hidden="true"></i>
                        <span>戻る</span>
                    </a>
                </div>
            </div>
            <div class="col-6">
                <div class="row align-items-center justify-content-end">
                    <div class="col-auto">
                        <button class="btn btn-ec-conversion px-5" type="submit">登録</button>
                    </div>
                </div>
            </div>
        </div><!-- row justify-content-between align-items-center -->
    </div><!-- c-conversionArea__container -->
</div><!-- c-conversionArea -->

</form>
{% endblock %}
