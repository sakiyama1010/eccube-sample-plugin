{% extends '@admin/default_frame.twig' %}

{% set menus = ['sample', 'sample_edit'] %}

{% block title %}{{ 'admin.sample.sample_registration'|trans }}{% endblock %}
{% block sub_title %}{{ 'admin.sample.sample_management'|trans }}{% endblock %}

{# returnで指定した内容 #}
{% form_theme form '@admin/Form/bootstrap_4_horizontal_layout.html.twig' %}

{% block javascript %}
    <script>
    </script>
{% endblock javascript %}

{% block main %}
<form name="sample_form" role="form" id="sample_form" method="post" class="h-adr"
    novalidate>
    {#action="{%- if sample.id %}{{ url('admin_sample_edit', { id : sample.id }) }}{% else %}{{ url('admin_sample_new') }}{% endif -%}"#}
    {{ form_widget(form._token) }}

<div class="c-contentsArea__cols">
    <div class="c-contentsArea__primaryCol">
        <div class="c-primaryCol">
            <div class="card rounded border-0 mb-4">
                <div class="card-header">
                    <div class="row">
                        <div class="col-8"><span class="card-title">{{ 'admin.sample.sample_info'|trans }}</span>
                        </div>
                        <div class="col-4 text-end">
                            <a data-bs-toggle="collapse" href="#sampleInfo"
                                aria-expanded="false" aria-controls="sampleInfo">
                                <i class="fa fa-angle-up fa-lg"></i>
                            </a>
                        </div>
                    </div>
                </div><!-- card-header -->
                <div class="collapse show ec-cardCollapse" id="sampleInfo">
                    <div class="card-body">
                        {# 1行1項目 #}
                        <div class="row mb-2">
                            <div class="col-3">
                                <span>{{ 'admin.sample.title'|trans }}</span>
                                {# 必須マーク #}
                                <span class="badge bg-primary ms-1">{{ 'admin.common.required'|trans }}</span>
                            </div>
                            <div class="col">
                                {# 1画面に同じform_widgetを複数指定はできなそう #}
                                {{ form_widget(form.title) }}
                                {{ form_errors(form.title) }}
                            </div>
                        </div>
                        {# 1行2項目 #}
                        <div class="row mb-2">
                            <div class="col-3">
                                <span>{{ 'admin.sample.detail'|trans }}</span>
                            </div>
                            <div class="col">
                                {{ form_widget(form.detail) }}
                                {{ form_errors(form.detail) }}
                            </div>
                            <div class="col">
                                {# 値の直表示 #}
                                {{ form.detail.vars.value }}
                            </div>
                        </div>
            </div><!-- card rounded border-0 mb-4 -->
        </div><!-- c-primaryCol -->
    </div><!-- c-contentsArea__primaryCol -->
</div><!-- c-contentsArea__cols -->

<div class="c-conversionArea">
    <div class="c-conversionArea__container">
        <div class="row justify-content-between align-items-center">
            <div class="col-6">
                <div class="c-conversionArea__leftBlockItem">
                    <a class="c-baseLink" href="{{ url('admin_sample', { resume: 1 }) }}">
                        <i class="fa fa-backward" aria-hidden="true"></i>
                        <span>戻る</span>
                    </a>
                </div>
            </div>
            <div class="col-6">
                <div class="row align-items-center justify-content-end">
                    <div class="col-auto">
                        <button class="btn btn-ec-conversion px-5" type="submit">登録</button>
                    </div>
                </div>
            </div>
        </div><!-- row justify-content-between align-items-center -->
    </div><!-- c-conversionArea__container -->
</div><!-- c-conversionArea -->
</form>
{% endblock %}
