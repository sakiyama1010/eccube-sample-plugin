    "version": "0.2.0",
    "configurations": [
        {
            "name": "Listen for XDebug Docker",
            "type": "php",
            "request": "launch",
            "port": 9000,
            "pathMappings": {
                "/var/www/html":"${workspaceRoot}"
            },
            "ignore": [
                "**/vendor/**/*.php",
                "**/var/**/*.php"
            ],
            "xdebugSettings": {
                "max_children": 128,
                "max_data": -1
            }
        }
    ]
}